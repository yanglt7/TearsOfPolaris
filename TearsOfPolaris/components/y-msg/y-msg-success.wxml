<!--components/y-msg/y-msg-success.wxml-->
<view class="weui-msg">
  <view class="weui-msg__icon-area">
    <icon type="success" size="64"></icon>
  </view>
  <view class="weui-msg__text-area">
    <view class="weui-msg__title">{{msg_title}}</view>
    <view class="weui-msg__desc">{{desc}}
    </view>
  </view>
  <view class="weui-msg__opr-area">
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" plain="{{plain}}" bindtap="handleNavigate">{{btn_title}}</button>
    </view>
  </view>
  <view class="weui-msg__extra-area">
    <view class="weui-footer weui-footer_fixed-bottom">
      <view class="weui-footer__text">Copyright Â© 2019-2020 Y_momo</view>
    </view>
  </view>
</view>