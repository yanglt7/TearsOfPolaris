/* pages/home/childCpns/searchbar.wxss */
@import '/assets/wxss/cell.wxss';

.searchbar-result {
  margin-top: 0;
  font-size: 28rpx;
}

.searchbar-result .weui-cell__bd {
  padding: 4rpx 0 4rpx 40rpx;
  color: #666;
}

.searchbar-result:before {
  display: none;
}

.weui-search-bar {
  position: relative;
  padding: 16rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #ededed;
  -webkit-text-size-adjust: 100%;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-icon-search {
  margin-right: 16rpx;
  font-size: 28rpx;
  vertical-align: top;
  margin-top: 0.64em;
  height: 1em;
  line-height: 1em;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 24rpx;
  top: 50%;
  margin-top: -8px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 28rpx;
  vertical-align: top;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 8rpx;
  background: #fff;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 64rpx;
  padding-right: 64rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  caret-color: #07c160;
}

.weui-icon-clear {
  position: absolute;
  /* top:0; */
  right: 0;
  bottom: 20rpx;
  padding: 0 24rpx;
  font-size: 0;
}

.weui-icon-clear:after {
  content: "";
  height: 100%;
  vertical-align: middle;
  display: inline-block;
  width: 0;
  overflow: hidden;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 8rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.5);
  background: #fff;
  line-height: 64rpx;
}

.weui-search-bar__cancel-btn {
  margin-left: 16rpx;
  line-height: 64rpx;
  color: #576b95;
  white-space: nowrap;
}
