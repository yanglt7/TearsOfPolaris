/* pages/profile/childCpns/y-header/y-header.wxss */
.header {
  display: flex;
  height: 200rpx;
  line-height: 200rpx;
  padding: 20rpx 40rpx;
  border: 2rpx solid rgba(0, 0, 0, .1);
}

.header_hd {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin: auto 0;
  overflow: hidden;
}

.header_bd {
  padding: 0 45rpx; 
  display: flex;
  flex-direction: column
}

.header_bd .showUserInfo {
  margin-top: -40rpx;
  display: flex;
}

.header_bd .nickName {
  color: #6699ff;
  font-size: 36rpx;
  margin-right: 40rpx; 
}

.header_bd .role {
  padding: 1rpx 10rpx;
  font-size: 24rpx;
  background-color: #69f;
  border-radius: 12rpx;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  margin: auto 0;
}

.header_bd .editUserInfo {
  margin-top: -40rpx;
  margin-left: -6rpx;
  padding: 1rpx 18rpx;
  font-size: 24rpx;
  color: #6699ff;
  background-color: #fff;
  border: 1rpx solid rgba(0, 0, 0, .1);
  border-radius: 12rpx;
}