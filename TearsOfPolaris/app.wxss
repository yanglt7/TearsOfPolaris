/* common CSS */

.page {
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  /* background-color: #f8f8f8 */
}

.page__hd {
  padding: 18rpx 20rpx;
  /* background-color: #fff; */
}

.page__bd {
  padding-bottom: 80rpx;
  padding: 0 8rpx;
}

.page__bd_spacing {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.page__ft {
  text-align: center;
  padding: 0 0 10rpx;
  padding: 0 0 calc(10rpx + constant(safe-area-inset-bottom));
  padding: 0 0 calc(10rpx + env(safe-area-inset-bottom));
}

.page__title {
  /* text-align: left; */
  font-size: 48rpx;
  color: #69f;
  font-weight: 500;
}

.page__desc {
  margin-top: 10rpx;
  color: #888;
  /* text-align: left; */
  font-size: 28rpx;
}

.weui-cell_example:before {
  left: 104rpx;
}

/* reset CSS */
.bottom-space {
  height: 2rpx;
  background-color: #fff;
}